
<div class="row">
  <%= form_for @message, url: message_path do |f| %>
  	<h3>
  		編集する
  	</h3>
    <div class="field">
      <%= f.label :message, "Message" %><br>
      <%= f.text_field :message  %>
    </div>
    <div class="field">
      <%= f.label :image, "ImageURL"%><br>
      <%= f.text_field :image %>
    </div>
    <div class="waves-effect waves-light btn">
      <%= f.submit "更新" %>
    </div>
  <% end %>
</div>

